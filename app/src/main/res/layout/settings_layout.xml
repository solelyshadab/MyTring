<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.mytring.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="Wifi Dashboard"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/titlebar_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Settings"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/language_text"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Language"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/language_dropdownlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Contribute signal data"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:background="@color/colorLightGrey"
        android:text="This feature allows user to contribute their mobile signal strength. This helps us to improve overall signal strength."
        android:textColor="@color/colorBlack"
        android:paddingTop="5dp"
        android:textSize="12dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Auto Switch Data"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:background="@color/colorLightGrey"
        android:text="This feature allows customer to automatically switch to the best data network by listening to the strongest data available among WIFI , SIM1 and SIM2"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Auto Switch Tower"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:background="@color/colorLightGrey"
        android:text="This feature allows customer to automatically switch to the mobile tower with the best signal strength. This feature keeps user on 2G data by default and also to take calls but  moves to 3G/4G whenever user opens a browser or an app. Thus saving user lot of battery while providing good voice and data quality."
        android:textColor="@color/colorBlack"
        android:paddingTop="5dp"
        android:textSize="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Auto Switch Network"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:background="@color/colorLightGrey"
        android:text="This is a paid feature which allows customer to automatically switch to a different mobile network with best signal strength. Customer is switched back to home network when it becomes better to make or receive calls."
        android:textColor="@color/colorBlack"
        android:paddingTop="5dp"
        android:textSize="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/colorBlack"
        android:paddingTop="5dp"
        android:textSize="12dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/MDbottomicon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Mobile Dashboard"
            android:onClick="mobileDashboard"
            app:srcCompat="@drawable/mobile_unclicked" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Wifi Dashboard"
            android:onClick="wifiDashboard"
            app:srcCompat="@drawable/wifi_unclicked" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Switch Tower"
            android:onClick="switchNetwork"
            app:srcCompat="@drawable/switchtower_unclicked" />

        <ImageView
            android:id="@+id/SNbottomicon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Speed Test"
            android:onClick="speedTest"
            app:srcCompat="@drawable/speedtest_unclicked" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Settings"
            android:onClick="settings"
            app:srcCompat="@drawable/settings_clicked" />
    </LinearLayout>

</LinearLayout>